<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/marfil"
    tools:context=".ComentarActividad"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center" >

        <TextView
            android:id="@+id/tInformacionActividad"
            style="@style/estiloletras"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tPuntuacionActividad"
            style="@style/estiloletras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PuntuaciÃ³n: " />

        <RatingBar
            android:id="@+id/rbPuntuacionActividad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="0.0"
            android:stepSize="1.0" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tComentarioActividad"
            style="@style/estiloletras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comentario:" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="horizontal" >

        <ScrollView
            android:id="@+id/ScrollComentarioActividad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/borde" >

			<EditText
			    android:id="@+id/edComentarioActividad"
			    style="@style/estiloletras"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content" >
			</EditText>
			<requestFocus />
		</ScrollView>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bAceptarComentario"
            style="@style/estiloletras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/descripcion_boton_aceptar"
            android:text="Aceptar" />

    </LinearLayout>

</LinearLayout>
