<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.descubre_sonidos"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.RECORD_AUDIO" />
	<uses-permission android:name="android.permission.CAMERA"/>
	
    <!--
    	<uses-permission android:name="com.android.launcher.permission.UNINSTALL_SHORTCUT" />
    -->


    <!--
    	Añadiendo android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
    	quita la barra de título y la de notificación para todas las
    	actividades del proyecto
    -->

    <application
        android:name="cajon_desastre.Aplicacion"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        <activity
            android:name="descubre_sonidos.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="descubre_sonidos.Configuracion"
            android:label="@string/title_activity_configuracion"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="descubre_sonidos.Calificar"
            android:label="@string/title_activity_calificar"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="descubre_sonidos.CrearActividad"
            android:label="@string/title_activity_crear_perfil_sonidos"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="descubre_sonidos.Juego"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_juego"
            android:screenOrientation="landscape"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="descubre_sonidos.JuegoDescubreSonidos"
            android:label="@string/title_activity_juego_descubre_sonidos"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="descubre_sonidos.JuegoSonidos"
            android:label="@string/title_activity_juego_sonidos"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="descubre_sonidos.CrearNinio"
            android:label="@string/title_activity_crear_ninio"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="descubre_sonidos.EliminarNinio"
            android:label="@string/title_activity_eliminar_ninio"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="descubre_sonidos.EliminarActividad"
            android:label="@string/title_activity_eliminar_actividad"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="descubre_sonidos.Modificar_actividad"
            android:label="@string/title_activity_modificar_actividad"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="descubre_sonidos.Evaluar"
            android:label="@string/title_activity_evaluar"
            android:screenOrientation="landscape" >
        </activity>
        <activity android:name="ar.com.daidalos.afiledialog.FileChooserActivity" />
        <activity
            android:name="descubre_sonidos.ComentarActividad"
            android:label="@string/title_activity_comentar_actividad"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>
