<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cerca_lejos"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.RECORD_AUDIO" />
    
    <!--
    	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    	<uses-permission android:name="com.android.launcher.permission.UNINSTALL_SHORTCUT" />
    -->


    <!--
    	Añadiendo android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
    	quita la barra de título y la de notificación para todas las
    	actividades del proyecto
    -->

    <application
        android:name="cajon_desastre.Aplicacion"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        <activity
            android:name="cerca_lejos.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cerca_lejos.Configuracion"
            android:label="@string/title_activity_configuracion"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="cerca_lejos.Evaluar"
            android:label="@string/title_activity_calificar"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="cerca_lejos.CrearActividad"
            android:label="@string/title_activity_crear_perfil_cl"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="cerca_lejos.Juego_cerca_lejos"
            android:label="@string/title_activity_juego_cerca_lejos"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="cerca_lejos.CrearNinio"
            android:label="@string/title_activity_crear_ninio"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="cerca_lejos.EliminarNinio"
            android:label="@string/title_activity_eliminar_ninio"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="cerca_lejos.EliminarActividad"
            android:label="@string/title_activity_eliminar_actividad"
            android:screenOrientation="landscape" >
        </activity>
        <activity android:name="ar.com.daidalos.afiledialog.FileChooserActivity" />
        <activity
            android:name="cerca_lejos.Modificar_actividad"
            android:label="@string/title_activity_modificar_actividad"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="cerca_lejos.ComentarActividad"
            android:label="@string/title_activity_comentar_actividad" 
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>
